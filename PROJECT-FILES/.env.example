# Application Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/your_project_db
DATABASE_SSL=false
DATABASE_LOGGING=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-make-it-long-and-random-for-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Email Service Configuration
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME="Your App Name"

# Alternative Email Services (uncomment to use)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain
# AWS_SES_ACCESS_KEY=your-aws-access-key
# AWS_SES_SECRET_KEY=your-aws-secret-key
# AWS_SES_REGION=us-east-1

# File Upload & Storage
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads/

# AWS S3 Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-west-2

# Cloudinary Configuration (if using for image processing)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Processing (if applicable)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_SUCCESS_URL=http://localhost:3000/payment/success
STRIPE_CANCEL_URL=http://localhost:3000/payment/cancel

# OAuth Providers (if using social login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# API Keys for External Services
OPENAI_API_KEY=sk-your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
ANALYTICS_API_KEY=your-analytics-api-key

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
RATE_LIMIT_SKIP_SUCCESSFUL=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info  # error, warn, info, debug
LOG_FORMAT=combined  # combined, short, tiny, dev
LOG_FILE_PATH=logs/app.log

# Error Tracking & Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=your-app-name

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true

# Development & Testing
DEBUG=true
MOCK_EXTERNAL_APIS=false
DISABLE_AUTH_FOR_TESTING=false
ENABLE_REQUEST_LOGGING=true

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=30000

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_KEYS=10000
ENABLE_CACHE=true

# Background Jobs (if using job queue)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
ENABLE_JOB_QUEUE=true

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs
SWAGGER_UI_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# Timezone & Localization
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Contact & Support
SUPPORT_EMAIL=support@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Main St, City, State 12345

# Legal & Compliance
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
GDPR_ENABLED=true
COOKIE_CONSENT_ENABLED=true

# Social Media & Branding
COMPANY_WEBSITE=https://yourdomain.com
TWITTER_HANDLE=@yourcompany
LINKEDIN_URL=https://linkedin.com/company/yourcompany
GITHUB_URL=https://github.com/yourcompany

# Development Tools
WEBPACK_DEV_SERVER_PORT=8080
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true

# Testing Configuration (for test environment)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/your_project_test_db
TEST_REDIS_URL=redis://localhost:6379/15
JEST_TIMEOUT=30000

# Production Overrides (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn
# ENABLE_REQUEST_LOGGING=false
# MOCK_EXTERNAL_APIS=false
# FORCE_HTTPS=true
# DATABASE_SSL=true
